<%- include('../../partials/head'); %>
<%- include('../../partials/navbar'); %>
<section class="home-section">
  <%- include('../../partials/homepage'); %>
  <section class="container">
    <article class="form-container">
      <article class="header-title-form">
        <span class="title"><%= title %></span>
      </article>
      <!-- New State-->
      <form action="/states/states" method="POST" class="form-data">
        <label> Name : 
          <input 
            class="text" 
            id="nombre-input"
            type="text" 
            name="nombre"
            value=""
            
          >
        </label>
        <span class="error-input" id="error-input-a"><%= msg_error %></span>
        <button 
          id="save-add"
          name="save" 
          type="submit" 
          value="submit" 
          class="btn btn-success success save"
        >
        <i class="fa fa-plus"></i> Save</button>
      </form>
      <a 
        name="cancel" 
        type="btn" 
        id="cancel" 
        class="btn btn-success cancel"
        href="/states/states"
      >
      <i class="fa fa-plus"></i> Cancel</a>
    </article>
  </section>
</section>
<%- include('../../partials/footer'); %>
<script>
  var text = document.getElementById("nombre-input");
  var error_a = document.getElementById("error-input-a");
  var btn_Save = document.getElementById("save-add");

  btn_Save.disabled = true;
  text.focus();

  /*-- Validate that the textBox is not blank
        to activate "Save" --*/
  text.addEventListener("keyup" ,() => {
    if (text.value.trim() !== "") {
      btn_Save.disabled = false;
      error_a.innerHTML = "";
    }else{
      btn_Save.disabled = true;
    }
  });
  
  text.addEventListener("mouseover", () => {
    mouseover(text)
  });
</script>